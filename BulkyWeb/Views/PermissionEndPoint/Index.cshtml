@model IEnumerable<Bulky_DTO.Identity.PermissionEndPointDTO>

    
<div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
    <h2 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
        📂 EndPoints Management
    </h2>

    <div class="flex flex-wrap gap-2">
        <button onclick="openEntityModal('PermissionEndPoint','Upsert')"
                class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition flex items-center gap-1">
            ➕ Add EndPoints
        </button>
    </div>
</div>

<div class="overflow-x-auto rounded shadow bg-white p-4">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-blue-50 text-gray-700">
            <tr>
                <th class="px-6 py-3 text-left uppercase tracking-wider text-sm font-medium">EndPoint Name</th>
                <th class="px-6 py-3 text-left uppercase tracking-wider text-sm font-medium">Controller</th>
                <th class="px-6 py-3 text-left uppercase tracking-wider text-sm font-medium">Action</th>
                <th class="px-6 py-3 text-left uppercase tracking-wider text-sm font-medium">HTTP Method</th>
                <th class="px-6 py-3 text-left uppercase tracking-wider text-sm font-medium">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
            @foreach (var endpoint in Model)
            {
                <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-4 text-gray-800 font-medium">@endpoint.EndPointName</td>
                    <td class="px-6 py-4">@endpoint.ControllerName</td>
                    <td class="px-6 py-4">@endpoint.ActionName</td>
                    <td class="px-6 py-4">@endpoint.HttpMethod</td>
                    <td class="px-6 py-4 flex gap-2">
                        <button onclick="openEntityModal('PermissionEndPoint','Upsert','@endpoint.Id')"
                                class="text-blue-600 hover:text-blue-800 font-medium transition flex items-center gap-1"
                                title="Edit EndPoint">
                            ✏️ Edit
                        </button>

                        <button onclick="callApi('/PermissionEndPoint/Delete/@endpoint.Id','PUT')"
                                class="text-red-600 hover:text-red-800 font-medium transition flex items-center gap-1"
                                title="Delete EndPoint">
                            🗑️ Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
