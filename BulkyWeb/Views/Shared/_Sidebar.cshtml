@{
    bool IsAuthenticatied = HttpContextAccessor.GetUserId() != null && HttpContextAccessor.GetUserId() != default;
}

<div class="p-6">
    <h1 class="text-2xl font-bold text-blue-600 mb-4">📚 Bulky Book</h1>

    @if (IsAuthenticatied)
    {
        <p class="text-sm text-gray-500 mb-6">
            Hello, <strong>@HttpContextAccessor.GetUserName()</strong> 👋
        </p>
    }

    <nav class="space-y-2">
        <a asp-controller="Home" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 hover:bg-blue-100 rounded transition">
            <i class="w-5 h-5 mr-2 text-blue-500">🏠</i> Home
        </a>
        <a asp-controller="User" asp-action="Index"
           class="flex items-center px-4 py-2 text-gray-700 hover:bg-blue-100 rounded transition">
            <i class="w-5 h-5 mr-2 text-blue-500">👤</i> Users
        </a>
        <a asp-controller="Role" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 hover:bg-blue-100 rounded transition">
            <i class="w-5 h-5 mr-2 text-blue-500">🛡️</i> Roles
        </a>
        <a asp-controller="Permission" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 hover:bg-blue-100 rounded transition">
            <i class="w-5 h-5 mr-2 text-blue-500">🔑</i> Permissions
        </a>
        <a asp-controller="Product" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 hover:bg-blue-100 rounded transition">
            <i class="w-5 h-5 mr-2 text-blue-500">📖</i> Books
        </a>
        <a asp-controller="Category" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 hover:bg-blue-100 rounded transition">
            <i class="w-5 h-5 mr-2 text-blue-500">🗂️</i> Categories
        </a>

        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                @* @Html.AntiForgeryToken() *@
                <button type="submit" class="flex items-center px-4 py-2 ...">
                    <span class="w-5 h-5 mr-2 text-red-500">🔓</span> Logout
                </button>
            </form>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="flex items-center px-4 py-2 text-gray-700 hover:bg-blue-100 rounded transition">
                <span class="w-5 h-5 mr-2 text-blue-500">🔐</span> Login
            </a>
        }
    </nav>
</div>