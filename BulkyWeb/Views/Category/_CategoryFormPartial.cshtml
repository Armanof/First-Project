@model CategoryDTO

<input type="hidden" name="Id" value="@Model?.Id" />
<input type="hidden" name="InsertedDateTime" value="@Model?.InsertedDateTime" />
<div>
    <label class="block text-sm font-medium text-gray-700 mb-1" for="Name">Category Name</label>
    <input type="text" name="Name" id="Name" value="@Model?.Name"
           class="w-full border px-3 py-2 rounded focus:ring focus:ring-blue-300" required />

    <label class="block text-sm font-medium text-gray-700 mb-1" for="Name">Display Order</label>
    <input type="text" name="DisplayOrder" id="DisplayOrder" value="@Model?.DisplayOrder"
           class="w-full border px-3 py-2 rounded focus:ring focus:ring-blue-300" required />
</div>
