@model ProductDTO

<div class="grid grid-cols-1 gap-4">
    <input asp-for="Id" type="hidden" />

    @if (!string.IsNullOrEmpty(Model?.ImageUrl))
    {
        <div class="flex justify-center mb-4">
            <img src="/@Model.ImageUrl"
                 alt="Uploaded Image"
                 class="rounded-xl max-w-[150px] max-h-[200px] object-scale-down shadow-lg border" />
        </div>
    }



    <div>
        <label asp-for="Title" class="block font-medium mb-1"></label>
        <input asp-for="Title" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Description" class="block font-medium mb-1"></label>
        <textarea asp-for="Description" class="w-full border rounded px-3 py-2"></textarea>
        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="ISBN" class="block font-medium mb-1"></label>
        <input asp-for="ISBN" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="ISBN" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Author" class="block font-medium mb-1"></label>
        <input asp-for="Author" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="Author" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Price" class="block font-medium mb-1"></label>
        <input asp-for="Price" type="number" step="0.01" class="w-full border rounded px-3 py-2" />
        <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <select name="F_CategoryId" id="F_CategoryId" class="w-full border rounded px-3 py-2">
            <option value="">-- Select Category --</option>
            @foreach (var category in ViewBag.CategoryList as List<CategoryDTO>)
            {

                <option value="@category.Id" selected="@(Model != null && Model.F_CategoryId == category.Id)">
                    @category.Name
                </option>

            }
        </select>

    </div>

    <div class="mb-4">
        <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-700">Image</label>

        <div class="flex items-center gap-4">
            <input type="text" id="imageUrlDisplay" class="w-full px-3 py-2 border rounded" placeholder="Choose image..." readonly />

            <button type="button" id="browseImageBtn"
                    class="bg-blue-500 text-white px-3 py-2 rounded hover:bg-blue-600">
                Browse
            </button>
        </div>

        <input type="hidden" asp-for="ImageUrl" />

        <input type="file" id="imageFileInput" name="file" accept="image/*" class="hidden" />

        <span asp-validation-for="ImageUrl" class="text-red-600 text-sm"></span>
    </div>

</div>
